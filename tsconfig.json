{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["dom", "es2021"],
    "paths": {
      "@/*": ["renderer/*"],
      "@common/*": ["common/*"],
      "@broadcast/*": ["broadcast/*"],
      "@database/*": ["database/*"],
      "@dolphin/*": ["dolphin/*"],
      "@replays/*": ["replays/*"],
      "@settings/*": ["settings/*"],
      "@console/*": ["console/*"]
    },
    "baseUrl": "./src",
    "outDir": "release/app/dist",
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": false,
    "noEmitOnError": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictPropertyInitialization": true,
    "skipLibCheck": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "experimentalDecorators": true
  },
  "ts-node": {
    "transpileOnly": true,
    "require": ["dotenv/config", "tsconfig-paths/register"]
  },
  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll"]
}
