{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "paths": {
      "@/*": ["renderer/*"],
      "@common/*": ["common/*"],
      "@broadcast/*": ["broadcast/*"],
      "@dolphin/*": ["dolphin/*"],
      "@replays/*": ["replays/*"],
      "@settings/*": ["settings/*"],
      "@console/*": ["console/*"],
      "@counter/*": ["counter/*"]
    },
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "release/app/dist"
  },
  "ts-node": {
    "transpileOnly": true,
    "require": ["tsconfig-paths/register"]
  },
  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll"]
}
